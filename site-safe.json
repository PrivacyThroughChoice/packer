{
  "builders": [{
    "type": "digitalocean",
    "api_key": "",
    "client_id": "",
    "region_id": 5,
    "droplet_name": "ptc-site",
    "snapshot_name": "ptc-site",
    "state_timeout": "20m"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sudo apt-get upgrade -y"]
  },{
    "type": "chef-solo",
    "cookbook_paths": ["cookbooks"],
    "run_list": ["recipe[chef_role_site::default]"]
  },{
    "type": "shell",
    "inline": ["sudo -u ptc-rails bash -c 'cd /opt/ptc-rails/current; export RAILS_ENV=production; rake db:reset'"]
  }]
}
